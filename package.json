{
    "name": "clean-architecture-todo-app",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite --host --force --port 5179",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint --fix .",
        "format": "prettier --ignore-path .gitignore --write \"**/*.{ts,tsx,css,scss,json,cjs,html}\"",
        "code-style:fix": "yarn run format && yarn run lint:fix",
        "preview": "vite preview",
        "prepare": "husky install",
        "coverage": "vitest run --coverage",
        "test": "vitest --run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage:ui": "vitest --ui --coverage",
        "open:cypress": "npx cypress open",
        "test:e2e": "npx cypress open --e2e",
        "test:component": "npx cypress open --component"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "cypress": "^13.6.1",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jest-dom": "^5.1.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "husky": "^8.0.0",
        "jsdom": "^23.0.1",
        "lint-staged": "^15.2.0",
        "prettier": "^3.1.1",
        "typescript": "^5.2.2",
        "vite": "^5.0.8",
        "vite-tsconfig-paths": "^4.2.2",
        "vitest": "^1.0.4"
    },
    "lint-staged": {
        "*.{ts,tsx,cjs}": [
            "eslint"
        ],
        "*.{ts,tsx,css,scss,cjs}": [
            "prettier --write"
        ]
    }
}
